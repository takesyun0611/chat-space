.side-bar
  .side-bar__header
    .side-bar__user-icon
      .side-bar__name
        = current_user.name
      .side-bar__icon
        .side-bar__btn
          = link_to new_group_path do
            = icon('fas', 'edit')
            %span<>
        .side-bar__btn
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
            %span<>
  .side-bar__group-all
    - current_user.groups.each do |group|
      .side-bar__group
        = link_to group_messages_path(group) do
          .side-bar__group-name
            = group.name
            .side-bar__message
              = group.show_last_message